<div id="content-page" class="span12 content group">

<div class="clear"></div>
<div class="posts">
  <div id="primary">
      <div class="container group">
          <div class="row">
              <!-- START CONTENT -->
              <div id="content-page">
                  <div>
                      <h4>My Portfolio</h4>
                      <p>&nbsp;</p>
                      <div class="accordion-container">

                          <div class="accordion-wrapper row">
                              <div class="accordion-title span9">
                                  <div class="plus">+</div>
                                  <h4><%= myportfolios[0].name %></h4>
                              </div>

                              <div class="accordion-item span9">
                                  <div class="row">
                                      <div class="span3">
                                          <div class="accordion-item-thumb">
                                              <img src="/uploads/<%= myportfolios[0].profilePic %>" alt="Celestino MagrÃ¬" />
                                          </div>
                                      </div>
                                      <!-- end span3 -->

                                      <div class="span6">
                                          <div class="accordion-item-content">
                                              <p>
                                                  <%= myportfolios[0].description %></p>
                                              <div class="clear space"></div>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>

                      <script>
                          jQuery(document).ready(function($){
                              $('.accordion-title').click(function(){
                                  if( !$(this).hasClass('active') ) {
                                      $('.accordion-title').removeClass('active').find(':first-child').addClass('plus').text("+").removeClass('minus');
                                      $('.accordion-item').slideUp();

                                      $(this).toggleClass('active')
                                              .find(':first-child').removeClass('plus').addClass('minus').text("-").parent().next().slideToggle();
                                  }
                              }).filter(':first').click();
                          });
                      </script>
                  </div>
              </div>
          </div>
      </div>
  </div>
<div class="hentry-post group portfolio-post internal-post">
<hr>
<div id="portfolio" class="portfolio-full-description">
  <script>
      jQuery(document).ready(function($){
          jQuery(".work-thumbnail .overlay a.lightbox_fulldesc").colorbox({
              transition:'elastic',
              rel:'lightbox_fulldesc',
              fixed:true,
              maxWidth: '80%',
              maxHeight: '80%',
              opacity : 0.7
          });
      });
  </script>
<div class="clear"></div>

<h3>My Projects</h3>

<div class="row">
    <ul id="portfolio" class="pinterest pinterest thumbnails">
    <% for(var i=0; i<myportfolios[0].works.length; i++) { %>
      <%for(var j = 0; j < projects.length; j++) { %>
        <% if(projects[j].equals(myportfolios[0].works[i])) { %>
          <h4></h4>
          <li  class="work span3">
            <div class="thumbnail">
          <%  if(projects[j].img != "default.png") { %>
                <div class="picture_overlay">
                    <img width="260" height="246" src="/uploads/<%= projects[j].img %>" class="attachment-thumb_portfolio_pinterest" alt="003" />
                    <a href="/editImg/?id=<%= projects[j]._id %>">EDIT IMAGE</a>
                </div>
          <%  } else {%>
                <a href="/editImg/?id=<%= projects[j]._id %>"> ADD IMAGE </a>
          <%  } %>
                <h4><%= projects[j].title %> </h4>
            <%    if(projects[j].URL != "false" && projects[j].URL.length > 0) { %>
                <a href="<%= projects[j].URL %>"> VISIT WEBSITE</a>
          <%    } %>
                <br>
                <a href="/editTitle/?id=<%= projects[j]._id %>">EDIT TITLE</a>
                <br>
                <%    if(projects[j].URL != "false" && projects[j].URL.length > 0) { %>
                <a href="/editURL/?id=<%= projects[j]._id %>"> EDIT URL</a>
                <%  } else {%>
                  <a href="/editURL/?id=<%= projects[j]._id %>"> ADD WEBSITE</a>
                  <%  } %>
            </div>
            <a class='read-more' href="/deleteProject/?id=<%= projects[j]._id %>">Delete Project</a>
        </li>
     <% } %>
    <% } %>
    <% } %>
    </ul>
</div>


<script type="text/javascript">
    jQuery(document).ready(function($){
        var container = $('#portfolio');
        container.imagesLoaded( function(){
            container.masonry({
                itemSelector: '.span3'
            });
        });

        $(window).resize(function(){
            $('#portfolio').masonry({
                itemSelector: '.span3'
            });
        })
    });
</script>

